<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.settings_fragment.SettingFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#EEEEEE">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/parametres"
        android:fontFamily="@font/jomhuria"
        android:textSize="64sp"
        android:gravity="center"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_profile"
            android:layout_width="0dp"
            android:layout_height="52dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="10dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/white">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/to_profile"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:clickable="true">
                <androidx.cardview.widget.CardView
                    android:id="@+id/profile_picture_container"
                    android:layout_width="0dp"
                    android:layout_height="42dp"
                    android:src="@drawable/profile_default"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/white">
                    <ImageView
                        android:id="@+id/profil_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/profile_default"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textSize="20sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/profile_picture_container"
                    android:textStyle="bold"
                    android:textColor="@color/seed"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="26dp"
                    android:text="@string/account_details"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textSize="11sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_name"
                    app:layout_constraintLeft_toRightOf="@id/profile_picture_container"
                    android:textColor="@color/seed"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="52dp"
                    android:src="@drawable/arrow_to"
                    android:layout_gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginEnd="20dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/cv_market"
            android:layout_width="0dp"
            android:layout_height="156dp"
            app:layout_constraintTop_toBottomOf="@id/cv_profile"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/to_default_exchange"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:clickable="true"
                android:focusable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:text="@string/bourse_defaut"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/seed"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:src="@drawable/arrow_to"
                    android:layout_gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="52dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/to_default_currency"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="51dp"
                android:clickable="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:gravity="center_vertical"
                    android:text="@string/devise_defaut"
                    android:textColor="@color/seed"
                    android:textSize="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:src="@drawable/arrow_to"
                    android:layout_gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="102dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/to_mode"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="102dp"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:text="@string/mode"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/seed"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:src="@drawable/arrow_to"
                    android:layout_gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_ui"
            android:layout_width="0dp"
            android:layout_height="104dp"
            app:layout_constraintTop_toBottomOf="@id/cv_market"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/white">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/notifications_switch"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:text="@string/notifications"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/seed"/>
                <com.google.android.material.materialswitch.MaterialSwitch
                    android:id="@+id/switch_notifications"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"
                    android:enabled="true"
                    app:thumbIcon="@drawable/icon_check"
                    app:thumbTint="#1F1F1F"
                    app:trackTint="#FFFFFF"
                    app:trackDecorationTint="#000000"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="51dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/to_langages"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="52dp"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:text="@string/langues"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/seed"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:src="@drawable/arrow_to"
                    android:layout_gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/cv_logout"
            android:layout_width="0dp"
            android:layout_height="104dp"
            app:layout_constraintTop_toBottomOf="@id/cv_ui"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="10dp"
            android:backgroundTint="@color/white">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/to_faq"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:text="@string/faq"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/seed"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:src="@drawable/arrow_to"
                    android:layout_gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="51dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/to_logout"
                android:layout_width="match_parent"
                android:layout_height="51dp"
                android:layout_marginTop="52dp"
                android:clickable="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:text="@string/d_connexion"
                    android:fontFamily="@font/plus_jakarta_sans"
                    android:textSize="20dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/seed"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="51dp"
                    android:src="@drawable/icon_logout"
                    android:layout_gravity="center_vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>