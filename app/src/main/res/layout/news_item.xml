<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/thumbnail"
        android:layout_width="140dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/article_title"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"/>

    <TextView
        android:id="@+id/article_title"
        android:layout_width="150dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/thumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="L'Europe hésite et Wall Street est vue en hausse avec l'accalmie sur les taux."
        android:fontFamily="@font/plus_jakarta_sans"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/article_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:textSize="12sp"
        android:fontFamily="@font/plus_jakarta_sans"
        android:text="PARIS (Reuters) - Wall Street est attendue en légère hausse mercredi à l'ouverture, tandis que les Bourses européennes tentent un timide rebond à mi-séance après quatre sessions d'affilée de baisse, la tendance positive étant soutenue par une accalmie précaire sur le marché obligataire en attendant la publication en fin de semaine des chiffres de l'inflation en zone euro et aux Etats-Unis."/>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/article_description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="30dp"
        app:dividerColor="@color/seed"
        android:layout_marginTop="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>