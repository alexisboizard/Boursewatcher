<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".views.MainFragment"
    android:backgroundTint="@color/secondary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_account_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mon_solde"
            android:fontFamily="@font/jomhuria"
            android:textSize="64sp"
            android:layout_marginHorizontal="20dp"
            android:gravity="left"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_account_balance"
            android:layout_width="0dp"
            android:layout_height="100dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_account_balance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"/>

        <TextView
            android:id="@+id/tv_stocks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/mes_actions"
            android:fontFamily="@font/jomhuria"
            android:textSize="64sp"
            android:layout_marginHorizontal="20dp"
            android:gravity="left"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/cv_account_balance"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="50dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontal_recycler_view"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            tools:itemCount="7"
            tools:listitem="@layout/horizontal_stock_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_stocks"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/wallet_details"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="20dp"
            android:text="DÃ©tails du portefeuille"
            android:fontFamily="@font/plus_jakarta_sans"
            app:icon="@drawable/icon_wallet_details"
            android:textStyle="bold"
            android:textSize="14sp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/horizontal_recycler_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:backgroundTint="@color/seed"
            app:circularflow_radiusInDP="100dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>